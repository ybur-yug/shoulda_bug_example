<div>
  <h3><%= @list.name %></h3>
  <%= link_to "edit list", edit_list_path(@list) %>
  <%= link_to "delete list", list_path(@list),
                           :data => { :confirm => "Are you sure?",
                                      :method  => "delete" }%>

  <% if @list.tasks.any? %>
    <%= link_to "edit list", edit_list_path(@list) %>
    <ul>
    <% @list.tasks.each do |task| %>
      <li><%= task.description %></li>
      <p><%= link_to "delete task", list_task_path(@list, task),
                                      data: {
                                        confirm: "are you sure?",
                                        method:  "delete"
      }%></p>
      <p><%= link_to "edit_task", action: :edit, id: task.id, list_id: @list.id, controller: :tasks %>
    <% end %>

    </ul>
  <% else %>
    <h4>No tasks yet!</h4>
  <% end %>
</div>

<p><%= link_to "return to lists", lists_path %></p>
<p><%= link_to "add a task", new_list_task_path(@list) %></p>


